<%- include('../partials/header') %>
<h1 class="trainer" id="trainer">All Trainers</h1>
<a href="/trainers/new">Add a trainer</a>
<table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% trainers.forEach((l) => { %>
      <tr>
        <td><%= l.name %></td>
        <td><%= l.location %></td>
        <td><%= l.description %></td>
        <td><a href="/trainers/<%= l._id %>">Details</a></td>
      </tr>
      <% }) %>
    </tbody>
</table>
